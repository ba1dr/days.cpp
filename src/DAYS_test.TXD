    ;каждого события
  &format=@eventdate@", "@eventwhen@", "@weekdate@", "@was@"\\"$tab$"День рождения "@eventstr@
}  ;Конец описания типа события

#defeventtype TDATE
{
  &color=1
  &bkcolor=7
  &daysback=2
  &daysfrw=3
  &format=@eventdate@", "@eventwhen@", "@weekdate@", "@was@"\\"$tab$@eventstr@
}

